- @title = t('titles.my_account')

%section
  %div
    %h1= @title
    - form_path = registration_path(resource_name)
    = semantic_form_for(resource, as: resource_name, url: form_path, 
      html: { method: :put} ) do |f|
      = f.inputs do
        = f.input :email
        = f.input :password, as: :password, 
          input_html: { autocomplete: 'off' }, required: false
        = f.input :password_confirmation, as: :password,
          input_html: { autocomplete: 'off' }, required: false
        = f.input :current_password, as: :password,
          input_html: { autocomplete: 'off' },  required: true
      = f.actions do
        = f.action :submit, label: t('buttons.save_account')
