- @title = t('titles.create_account')

%section
  %div
    %h1= @title
    - form_path = registration_path(resource_name)
    = semantic_form_for(resource, as: resource_name, url: form_path) do |f|
      = f.inputs do
        = f.input :email, input_html: { autofocus: true }
        = f.input :password, as: :password, input_html: { autocomplete: 'off' }
        = f.input :password_confirmation, as: :password, 
          input_html: { autocomplete: 'off' }, required: true
      = f.actions do
        = f.action :submit, label: t('buttons.create_account')
