- @title = t('titles.login')

%section
  %div
    %h1= @title
    - form_path = session_path(resource_name)
    = semantic_form_for(resource, as: resource_name, url: form_path) do |f|
      = f.inputs do
        = f.input :email, input_html: { autofocus: true }, required: false
        = f.input :password, as: :password, 
          input_html: { autocomplete: 'off' }, required: false
        - if devise_mapping.rememberable?
          = f.input :remember_me, as: :boolean
      = f.actions do
        = f.action :submit, label: t('buttons.login')
    = link_to(t('links.forgot_password'), new_password_path(resource_name))
