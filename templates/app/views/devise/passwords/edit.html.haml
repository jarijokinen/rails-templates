- @title = t('titles.change_password')

%section
  %div
    %h1= @title
    - form_path = password_path(resource_name)
    = semantic_form_for(resource, as: resource_name, url: form_path, 
      html: { method: :put} ) do |f|
      = f.inputs do
        = f.input :reset_password_token, as: :hidden
        = f.input :password, input_html: { autofocus: true, 
          autocomplete: 'off' }, required: false
        = f.input :password_confirmation, input_html: { autocomplete: 'off' }, 
          required: false
      = f.actions do
        = f.action :submit, label: t('buttons.change_password')
